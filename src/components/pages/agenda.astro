---
import Layout from "@/layouts/Layout.astro";
import HeroContainer from "@/components/HeroContainer.astro";
import { getI18N } from "@/i18n";
import VIPHallTable from "../Tables/VIPHallTable.astro";
import BlueHallTable from "../Tables/BlueHallTable.astro";
import PurpleHallTable from "../Tables/PurpleHallTable.astro";
import SpeakersGrid from "../Speakers/SpeakersGrid.astro";
import BentoVIP12 from "@/components/BentoVIP12.astro";
import BentoVIP13 from "@/components/BentoVIP13.astro";
import BentoVIP14 from "@/components/BentoVIP14.astro";
import BentoBLUE12 from "@/components/BentoBLUE12.astro";
import BentoBLUE13 from "@/components/BentoBLUE13.astro";
import BentoBLUE14 from "@/components/BentoBLUE14.astro";
import BentoPURPLE12 from "@/components/BentoPURPLE12.astro";
import BentoPURPLE13 from "@/components/BentoPURPLE13.astro";
import BentoPURPLE14 from "@/components/BentoPURPLE14.astro";
import Intro from "../Intro.astro";
import IntroAgenda from "../IntroAgenda.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
  title={i18n.SEO.Agenda_TITLE}
  description={i18n.SEO.ARCHIVO_DESCRIPTION}
>
  <HeroContainer img="/timetable.webp">
    <h1
      class="lg:text-6xl text-5xl text-center uppercase font-tomaso tracking tracking-widest"
    >
      {i18n.Agenda_TITLE}
    </h1>
  </HeroContainer>

  <main class="overflow-hidden">
    <IntroAgenda />

    <div class="pt-24 mx-auto max-w-screen-xl px-6">
      <nav class="tabs flex flex-col md:flex-row mt-2">
        <button
          data-target="panel-1"
          class="tab active flex-1 py-4 text-xl font-bold px-6 block rounded-t-2xl shadow-[3px_-6px_5px_#1a1a1a33] text-white focus:outline-none"
        >
          {i18n.Agenda_VIP}
        </button>
        <button
          data-target="panel-2"
          class="tab py-4 px-6 flex-1 block text-xl font-bold rounded-t-2xl text-white shadow-[3px_-6px_5px_#1a1a1a33] focus:outline-none"
        >
          {i18n.Agenda_Blue}
        </button>
        <button
          data-target="panel-3"
          class="tab py-4 px-6 flex-1 block text-xl font-bold rounded-t-2xl text-white shadow-[3px_-6px_5px_#1a1a1a33] focus:outline-none"
        >
          {i18n.Agenda_Purple}
        </button>
      </nav>
    </div>

    <div id="panels" class="w-full px-4">
      <div class="panel-1 active tab-content py-5">
        <VIPHallTable />
        <div class="flex-col xl:flex-row flex w-full gap-2">
          <BentoVIP12 />
        </div>
        <div class="flex-col xl:flex-row flex w-full gap-2">
          <BentoVIP13 />
        </div>
        <div class="flex-col xl:flex-row flex w-full gap-2">
          <BentoVIP14 />
        </div>
      </div>

      <div class="panel-2 tab-content py-5">
        <BlueHallTable />
        <div class="flex-col xl:flex-row flex w-full gap-2">
          <BentoBLUE12 />
        </div>
        <div class="flex-col xl:flex-row flex w-full gap-2">
          <BentoBLUE13 />
        </div>
        <div class="flex-col xl:flex-row flex w-full gap-2">
          <BentoBLUE14 />
        </div>
      </div>

      <div class="panel-3 tab-content py-5">
        <PurpleHallTable />
        <div class="flex-col xl:flex-row flex w-full gap-2">
          <BentoPURPLE12 />
        </div>
        <div class="flex-col xl:flex-row flex w-full gap-2">
          <BentoPURPLE13 />
        </div>
        <div class="flex-col xl:flex-row flex w-full gap-2">
          <BentoPURPLE14 />
        </div>
      </div>
    </div>
  </main>
</Layout>
<script>
  const tabButtons = document.querySelectorAll(".tabs button");
  const panels = document.querySelectorAll(".tab-content");

  function onTabClick(event: any) {
    // deactivate existing active tabs and panels
    tabButtons.forEach((btn) => btn.classList.remove("active"));
    panels.forEach((panel) => panel.classList.remove("active"));

    // activate new tab and panel
    event.currentTarget.classList.add("active");
    const targetPanelClass = event.currentTarget.getAttribute("data-target");
    const targetPanel = document.querySelector(`.${targetPanelClass}`);
    if (targetPanel) {
      targetPanel.classList.add("active");
    }
  }

  tabButtons.forEach((btn) => {
    btn.addEventListener("click", onTabClick, false);
  });
</script>
<style>
  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: block;
  }

  .tab.active {
    background: #222b5b;
  }
  .tab.active:hover {
    background: #1b2663;
  }
</style>
